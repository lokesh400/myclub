<div class="max-w-lg mx-auto mt-10 bg-white shadow-md rounded p-6">
  <h2 class="text-xl font-bold mb-4 text-center text-indigo-600">
    Register for <%= recruitment.clubId.name %>
  </h2>

  <%- include('../flash.ejs') %>

  <form action="/student/register/<%= recruitment._id %>" method="POST" class="space-y-4">
    <input type="text" name="name" placeholder="Full Name" class="w-full border px-3 py-2 rounded">
    <input type="text" name="course" placeholder="Course" class="w-full border px-3 py-2 rounded">
    <input type="text" name="branch" placeholder="Branch" class="w-full border px-3 py-2 rounded">
    <input type="text" name="semester" placeholder="Semester" class="w-full border px-3 py-2 rounded">
    <input type="text" name="rollNumber" placeholder="Roll Number" class="w-full border px-3 py-2 rounded">
    <input type="email" name="email" placeholder="Email" class="w-full border px-3 py-2 rounded">
    <input type="text" name="phoneNumber" placeholder="Phone Number" class="w-full border px-3 py-2 rounded">
    
    <!-- Hidden fields -->
    <input type="hidden" name="clubId" value="<%= recruitment.clubId._id %>">
    <input type="hidden" name="recruitmentId" value="<%= recruitment._id %>">

    <button type="submit" class="w-full bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">
      Register
    </button>
  </form>
</div>
