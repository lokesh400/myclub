<% layout('layouts/public') %>
<h2 class="text-2xl font-bold mb-6">Application Status</h2>
<ul class="space-y-4">
  <% applications.forEach(app => { %>
    <li class="bg-white p-4 rounded shadow">
      <h3 class="font-bold"><%= app.club.name %></h3>
      <ul class="mt-2">
        <% app.rounds.forEach(r => { %>
          <li><%= r.roundName %>: <span class="font-semibold"><%= r.status %></span></li>
        <% }) %>
      </ul>
    </li>
  <% }) %>
</ul>
